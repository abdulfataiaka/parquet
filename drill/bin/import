#!/bin/bash

###=== NOTE: Script runs outside of drill container ===#

ROOTDIR="$(dirname $(dirname $(cd $(dirname $0) && pwd)))"
cd $ROOTDIR
source db/bin/support

tbnames="${*:1}"

if [ "$tbnames" == "--all" ]; then
  tbnames=$tables
fi

if [ "$tbnames" == "" ]; then
  printf "\n[*] No table has been specified for import\n\n"
  exit
fi

printf "\n[*] Importing tables as parquet files\n"
docker-compose run --rm spark bin/convert ${tbnames[*]}
echo
